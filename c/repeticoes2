
#include <stdio.h>
int main() {
 
  float numerador, denominador, soma;
   int i;
 

 numerador = 1;
 denominador = 1;
 soma = 0;
 

 for(i = 1; i <= 50; i++){
 soma += numerador / denominador;
 denominador++;
 }

 printf("A soma dos termos da série é: %.1f", soma );
 
 return 0;
}
