#include <stdio.h>
int main() {
 
   int A[10] = {1, 2, -3, 4, 50, 6, 70, 8, 9, 10}, i, menor_elemento, maior_elemento;

  menor_elemento = A[0];
  maior_elemento = A[0];
 
 for(i = 1; i < 10; i++){
   if(A[i] < menor_elemento){
    menor_elemento = A[i];
   }
 if(A[i] > maior_elemento){
   maior_elemento = A[i];
   }
 }
 

 printf("\nO menor valor é: %d", menor_elemento);
 printf("\nO maior elemento é: %d", maior_elemento);
 
 return 0;
}