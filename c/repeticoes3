

#include <stdio.h>
int main() {
 
   int num, soma_pares, soma_impares;
 
    soma_pares = 0;
    soma_impares = 0;
 
     do{
          printf("Informe número: ");
          scanf("%d", &num);
 

     if(num % 2 == 0){
       soma_pares = soma_pares + num;
      }
     else{
       soma_impares = soma_impares + num;
 }
 
     }while(num != 0);
 
 printf("\nSoma dos números pares: %d", soma_pares);
 printf("\nSoma dos números ímpares: %d", soma_impares);
 
 return 0;
}

